{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "dev/**/*",
    "types/*.d.ts",
    "lib/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test"
  ]
}
